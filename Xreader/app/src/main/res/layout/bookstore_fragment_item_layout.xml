<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bookstore_fragment_item_img"
        android:layout_width="60dp"
        android:layout_height="72dp"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/bookstore_fragment_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_toRightOf="@id/bookstore_fragment_item_img"
        android:text="@string/app_name"
        android:textColor="@color/font_color_black"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/bookstore_fragment_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/bookstore_fragment_item_title"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_toRightOf="@id/bookstore_fragment_item_title"
        android:text="@string/app_name"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/bookstore_fragment_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookstore_fragment_item_author"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_toRightOf="@id/bookstore_fragment_item_img"
        android:text="@string/app_name"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/text_size_13" />

</RelativeLayout>